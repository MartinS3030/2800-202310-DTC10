<%- include("templates/head", { stylesheetPath: ['/styles/login.css', '/styles/nav.css','/styles/foot.css'] }) %>
<%- include("templates/nav") %>

<div class="d-flex justify-content-center align-items-center vh-100">
    <form method="POST" action="/updatePassword">
        <div class="card text-center" style="width: 300px;">
            <div class="card-header h5 text-white bg-dark">Password Reset</div>
            <div class="card-body px-5">
                <p class="card-text py-2">
                    Please enter new password.
                </p>
                <div class="form-outline">
                    <input name="new_password" type="password" class="form-control my-3" />
                </div>

                <p class="card-text py-2">
                    Please confirm your new password.
                </p>
                <div class="form-outline">
                    <input name="confirm_new_password" type="password" class="form-control my-3" />
                </div>

                <button class="btn btn-dark w-100" type="submit">Submit</button>
                <div class="d-flex justify-content-between mt-4">
                    <a class="" onclick="window.location.href='/login';">Login</a>
                    <a class="" onclick="window.location.href='/signup';">Register</a>
                </div>
            </div>
        </div>
    </form>
</div>

<%- include("templates/foot") %>