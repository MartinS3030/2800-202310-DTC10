<%- include("templates/head", { stylesheetPath: ['/styles/login.css'] }) %>

<div class="container">
    <h1>Login</h1>
    <br>
    <form method="POST" action="/loginSubmit">
        <input type="email" name="email" placeholder="email" />
        <br>
        <br>
        <input type="password" name="password" placeholder="password" />
        <br>
        <br>
        <input type="submit" />
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <button class="btn btn-style-1 btn-primary" type="submit" data-toast="" data-toast-position="topRight" data-toast-type="success" data-toast-icon="fe-icon-check-circle" data-toast-title="Success!" data-toast-message="Your profile updated successfuly." onclick="window.location.href='/updateInfo';">Forgot Password?</button>
        </div>
    </form>
</div>

<%- include("templates/foot") %>